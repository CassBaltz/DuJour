<div class="row">

<div class="col-lg-3"></div>
<div class="col-lg-6 well">

<h3>signup form</h3>
<br>

<%= bootstrap_form_for(@user) do |f| %>

      <%= f.text_field :name, label: "your name" %>

      <%= f.text_field :zip, label: "zip code" %>

      <%= f.email_field :email, label: "email" %>

      <%= f.password_field :password, label: "password" %>

      <%= f.password_field :password_confirmation, label: "password confirmation" %>
     
      <%= f.submit "signup", class: "btn btn-large btn-primary", id: "button", remote: true %>
<% end %>
<p><%= link_to "forgot password?", new_password_recovery_path %></p>
</div>

<div class="col-lg-3"></div>
</div>