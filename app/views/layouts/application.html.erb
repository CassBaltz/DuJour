<!DOCTYPE html>
<html>
  	<head>
	 	<title><%= full_title(yield(:title)) %></title>
	 	<%= favicon_link_tag 'favicon.ico' %>
	 	<%= stylesheet_link_tag "application", media: "all",
	                                           "data-turbolinks-track" => true %>
	    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

	    <%= csrf_meta_tags %>

    	<%= render 'layouts/shim' %>
  	</head>
  		

	<body class="container">
		<%= render 'layouts/header' %>
		<% if store_signed_in? %>
		<div class="top_buffer_store visible-xs-block visible-xs-inline-block visible-xs-inline"></div>
		<% elsif user_signed_in? %>
		<div class="top_buffer_user visible-xs-block visible-xs-inline-block visible-xs-inline"></div>
		<% else %>
		<div class="top_buffer_std visible-xs-block visible-xs-inline-block visible-xs-inline"></div>
		<% end %>
		<%= render 'layouts/messages' %> 
		<%= yield %>
		<%= render 'layouts/footer' %>
	</body>
</html>
