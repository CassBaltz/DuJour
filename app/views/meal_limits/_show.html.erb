<div class="col-xs-2"></div>
	<div class="col-xs-8 modal-dialog">
		<div class="modal-content">
		<h1><%=@meal.name%></h1>

		<%= bootstrap_form_for(current_store.meal_limits.build(meal_id: @meal.id), remote: true) do |f| %> 
		<div><%= f.hidden_field :meal_id %></div>

		<p><%= f.label :availability, "units available to sell (small = 2, medium = 4, large = 6)" %></p>
		<p><%= f.select :availability, [50, 60, 70, 80, 90, 100, 110, 120, 130, 140, 150] %></p>

		<p><%= f.submit "set order params", class: "btn btn-lg btn-success"%></p>
		<% end %>   
		</div>
	</div>
<div class="col-xs-2"></div>