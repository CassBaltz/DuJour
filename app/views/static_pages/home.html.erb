
<!-- User signed in -->
<% if user_signed_in? %>

<% provide(:title, current_user.name.downcase) %>

<div class="row">
	<%= render 'static_pages/marquee_meal_partial' %>
</div>    

<!-- ++ Store signed in ++ -->
<% elsif store_signed_in? %>

<% provide(:title, current_store.name) %>

<h1><%= current_store.name %></h1>

<div class="row buffer"></div>

		<!-- Store signed in and meal is running -->
	<% if @meal_active.present? %>
		<div class="row text-center">
			<h1><%= @meal_active.name %></h1>
			<h3>number of orders: <%= @order_count %></h3>
		</div>

		<div class="row buffer"></div>

		<div class="row text-center">
			<%= link_to "Check your current orders", store_current_orders_path, class: "btn btn-large btn-primary"%>
		</div>

		<!-- Store signed in and NO meal running -->
	<% else %>

		<div class="row text-centered">
			<%= link_to "Set Upcoming Meals", store_meal_index_path, id: "sign_up_link", class: "btn btn-large btn-primary"%>
		</div>

	<% end %>

<!-- Neither store nor user is signed in -->
<% else %>

<% provide(:title, 'home') %>

<div class="row">
	<div class="jumbotron">
	    <h1> Welcome to SCARBOROUGH FAIR</h1>
	    <h4> delicious dinners done conveniently </h4>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<%= link_to "Sign up now!", signup_path, id: "sign_up_link", class: "btn btn-large btn-primary", remote: true %>
	</div>
</div>

<% end %>

<div id="store-modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>   




